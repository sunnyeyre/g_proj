#!gmake 

#-----------------------------------------
#Basic Stuff -----------------------------
BITTINESS = -m32
CC          = g++ -Wall ${BITTINESS}
cc          = gcc -Wall ${BITTINESS}

#-----------------------------------------
#Optimization ----------------------------
OPTMAC = -fast

TARGETS = pendulum 

OBJECTS = pendulum.o

#-----------------------------------------
# Mac specific stuff
FRAMEWORK = -framework GLUT
FRAMEWORK += -framework OpenGL
MACLIBS = -lglut -lGLU -lGL -lXmu -lX11 -lm -lstdc++ -lfreeimage -lGLUI -lgsl -lgslcblas
MACINCS = -L /usr/local/lib -I /usr/local/include -L"/System/Library/Frameworks/OpenGL.framework/Libraries" -I"/System/Library/Frameworks/GLUT.framework/Headers" -L ./ -I ./ -L /opt/local/lib/ -I /opt/local/include/ -L /usr/local/lib/ -I /usr/local/include/ -I/Developer/SDKs/MacOSX10.6.sdk/usr/X11/include -L/Developer/SDKs/MacOSX10.6.sdk/usr/X11/lib/


#-----------------------------------------
CCOPTSMAC = $(OPTMAC) $(MACINCS) -DOSX
LDOPTSMAC = $(OPTMAC) $(MACINCS) $(MACLIBS) -DOSX

#-----------------------------------------
#-----------------------------------------

default: $(TARGETS)

clean:
	/bin/rm -f *.o $(TARGETS)

#-----------------------------------------
#-----------------------------------------

pendulum: pendulum.o
	$(CC) pendulum.o $(FRAMEWORK) $(LDOPTSMAC) -o pendulum

pendulum.o: pendulum.cpp
	$(CC) pendulum.cpp -c $(CCOPTSMAC)

